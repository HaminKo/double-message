<div class="row">

  <div class="col-md-8 col-md-offset-2">

    <div class="panel panel-default">
      <div class="panel-heading">Login</div>
      <div class="panel-body">

        {{#if error}}
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          {{error}}
        </div>
        {{/if}}

        <div class="inner">

          <form class="form-horizontal"method="post">
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <label>Username</label>
                {{#if usernameInput}}
                  <input type="text" class="form-control" name="signupUsername" placeholder="{{usernameInput}}" value="{{usernameInput}}">
                {{else}}
                  <input type="text" class="form-control" name="signupUsername" placeholder="Username" value="{{contact.name}}">
                {{/if}}
              </div>
            </div>
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <label>Phone Number</label>
                {{#if phoneInput}}
                  <input type="text" class="form-control" name="signupPhone" placeholder="Phone Number" value="{{phoneInput}}">
                {{else}}
                  <input type="text" class="form-control" name="signupPhone" placeholder="Phone Number" value="{{contact.phone}}">
                {{/if}}
              </div>
            </div>
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <label>Password</label>
                {{#if passwordInput}}
                  <input type="password" class="form-control" name="signupPassword" placeholder="Password" value="{{passwordInput}}">
                {{else}}
                  <input type="password" class="form-control" name="signupPassword" placeholder="Password" value="{{contact.password}}">
                {{/if}}
              </div>
            </div>
            <div class="col-md-10 col-md-offset-1">
              <div class="form-group">
                <label>Confirm Password</label>
                {{#if passwordConfirmInput}}
                  <input type="password" class="form-control" name="signupPasswordConfirm" placeholder="Confirm password" value="{{passwordConfirmInput}}">
                {{else}}
                  <input type="password" class="form-control" name="signupPasswordConfirm" placeholder="Confirm password" value="{{contact.passwordConfirm}}">
                {{/if}}
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-10 col-md-offset-1" style="text-align:center">
                <button type="submit" class="btn btn-primary">Register</button>
                <a class="btn btn-primary" href='/contacts/new'>Go back to Login</a>
              </div>
            </div>
          </form>
        </div>

      </div>

    </div>

  </div>

</div>
