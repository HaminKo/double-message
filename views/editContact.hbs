{{#if error}}
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  {{error}}
</div>
{{/if}}

<form method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="contactName" placeholder="Name" value="{{contact.name}}">
  </div>
  <div class="form-group">
    <label>Number</label>
    <input type="text" class="form-control" name="contactPhone" placeholder="Phone" value="{{contact.phone}}">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" class="form-control" name="contactEmail" placeholder="Email" value="{{contact.email}}">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
